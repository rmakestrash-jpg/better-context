{
  "name": "@btca/repo",
  "author": "Ben Davis",
  "version": "0.1.4",
  "description": "CLI tool for asking questions about technologies using OpenCode",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bmdavis419/better-context"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "keywords": [
    "cli",
    "ai",
    "docs"
  ],
  "engines": {
    "bun": ">=1.1.0"
  },
  "packageManager": "bun@1.3.3",
  "scripts": {
    "dev": "turbo run dev",
    "cli": "bun run apps/cli/src/index.ts",
    "cli:ask": "bun run apps/cli/src/index.ts ask",
    "cli:serve": "bun run apps/cli/src/index.ts serve",
    "cli:open": "bun run apps/cli/src/index.ts open",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  }
}
