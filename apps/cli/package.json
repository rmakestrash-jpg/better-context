{
	"name": "btca",
	"author": "Ben Davis",
	"version": "0.5.9",
	"description": "CLI tool for asking questions about technologies using OpenCode",
	"type": "module",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/davis7dotsh/better-context.git"
	},
	"keywords": [
		"cli",
		"ai",
		"docs"
	],
	"engines": {
		"bun": ">=1.1.0"
	},
	"bin": {
		"btca": "bin.js"
	},
	"files": [
		"bin.js",
		"dist/btca-darwin-arm64",
		"dist/btca-darwin-x64",
		"dist/btca-linux-arm64",
		"dist/btca-linux-x64",
		"dist/btca-windows-x64.exe"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build:js": "bun run scripts/build.ts",
		"build:targets": "bun run scripts/build-binaries.ts",
		"build": "bun run build:js && bun run build:targets",
		"check": "tsgo --noEmit",
		"prepare": "effect-language-service patch",
		"dev": "bun run src/tui-solid/App.tsx",
		"db:generate": "drizzle-kit generate",
		"db:sync": "bun run db:generate && bun scripts/sync-schema-sql.ts",
		"db:studio": "drizzle-kit studio"
	},
	"devDependencies": {
		"@btca/shared": "workspace:*",
		"@effect/cli": "^0.72.1",
		"@effect/language-service": "^0.62.5",
		"@effect/platform": "^0.93.8",
		"@effect/platform-bun": "^0.85.0",
		"@effect/printer": "^0.47.0",
		"@effect/printer-ansi": "^0.47.0",
		"@effect/typeclass": "^0.38.0",
		"@opencode-ai/sdk": "^1.0.208",
		"@opentui/core": "^0.1.65",
		"@opentui/solid": "^0.1.65",
		"@types/bun": "latest",
		"better-sqlite3": "^12.5.0",
		"drizzle-kit": "^0.31.8",
		"effect": "^3.19.13",
		"solid-js": "^1.9.10",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@shikijs/langs": "^3.20.0",
		"@shikijs/themes": "^3.20.0",
		"drizzle-orm": "^0.45.1",
		"marked": "^17.0.1",
		"shiki": "^3.20.0"
	}
}
